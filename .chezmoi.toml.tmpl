{{- $persemail := promptStringOnce . "persemail" "Personal email address" -}}
{{- $persgitsigningkey := promptStringOnce . "persgitsigningkey" "Personal git signing key" -}}
{{- $workemail := promptStringOnce . "workemail" "Work email address" -}}
{{- $workgitsigningkey := promptStringOnce . "workgitsigningkey" "Work git signing key" -}}

[data]
    persemail = {{ $persemail | quote }}
    persgitsigningkey = {{ $persgitsigningkey | quote }}
    workemail = {{ $workemail | quote }}
    workgitsigningkey = {{ $workgitsigningkey | quote }}
[diff]
    exclude = ["externals"]
