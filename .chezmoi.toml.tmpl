{{- $personalemail := promptStringOnce . "personalemail" "Personal email address" -}}
{{- $personalgitsigningkey := promptStringOnce . "personalgitsigningkey" "Personal git signing key" -}}
{{- $workemail := promptStringOnce . "workemail" "Work email address" -}}
{{- $workgitsigningkey := promptStringOnce . "workgitsigningkey" "Work git signing key" -}}

[data]
    personalemail = {{ $personalemail | quote }}
    personalgitsigningkey = {{ $personalgitsigningkey | quote }}
    workemail = {{ $workemail | quote }}
    workgitsigningkey = {{ $workgitsigningkey | quote }}
[diff]
    exclude = ["externals"]
